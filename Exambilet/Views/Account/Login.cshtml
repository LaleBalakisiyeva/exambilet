@using Exambilet.ViewModels

@model LoginVM

<div class="container mt-5" style="padding: 80px;">
    <h6>Login Page</h6>
    <form method="post" >
        <div class="mb-3">
            <label asp-for="UserOrEmailName" class="form-label">UserOrEmailName</label>
            <input asp-for="UserOrEmailName" class="form-control" placeholder="UserOrEmailName">
            <span asp-validation-for="UserOrEmailName" style="color:red"></span>
        </div>
      
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" style="color:red"></span>
        </div>
       
        <button asp-controller="Home" asp-action="Index" type="submit" class="btn btn-primary">Login Me!</button>

    </form>
</div>
